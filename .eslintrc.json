{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "settings": {
        "react": {
            "createClass": "createReactClass",
            "pragma": "React", 
            "version": "16.6"
        },
        "propWrapperFunctions": [ "forbidExtraProps" ]                         
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["error","tab"],
        "linebreak-style": 0,
        "quotes": ["error","single"],
        "semi": ["error","never"],
        "object-curly-spacing": ["error", "always"],
        "array-bracket-spacing": ["error", "always"],
        "react/jsx-curly-spacing": ["error", "always"]
    }
}